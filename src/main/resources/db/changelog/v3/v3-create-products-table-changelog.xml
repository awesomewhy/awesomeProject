<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v3-1" author="serenty">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>

        <createTable tableName="products">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="timestamp(6) without time zone"/>
            <column name="description" type="text"/>
            <column name="discount" type="numeric(38,2)"/>
            <column name="name" type="text"/>
            <column name="orderType" type="smallint"/>
            <column name="paymentType" type="smallint"/>
            <column name="accountVerified" type="boolean"/>
            <column name="price" type="boolean"/>
            <column name="rating" type="boolean"/>
            <column name="seller_id" type="uuid"/>

        </createTable>
    </changeSet>

    <changeSet id="v3-2" author="serenty">
        <addForeignKeyConstraint baseTableName="products"
                                 baseColumnNames="seller_id"
                                 constraintName="fk_products_seller_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>